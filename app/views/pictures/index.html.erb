<p id="notice"><%= notice %></p>

<h1>Mi galeria</h1>

<table>
  <thead>
    <tr>
      <th>Pintura</th>
      <th>Titulo</th>
      <th>Descripción</th>
      <th>Tematica</th>
      <th>Estilo</th>
      <th>Tecnica</th>
      <th>Orientación</th>
      <th>Tamaño</th>
      <th>Precio</th>
      <th>Palabras claves</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pictures.each do |picture| %>
      <tr>
        <td><%= picture.avatar %></td>
        <td><%= picture.title %></td>
        <td><%= picture.description %></td>
        <td><%= picture.subject.name %></td>
        <td><%= picture.style.name %></td>
        <td><%= picture.technique.name %></td>
        <td><%= picture.orientation.name %></td>
        <td><%= picture.size.name %></td>
        <td><%= picture.price %></td>
        <td><%= picture.user_id %></td>
        <td><%= picture.tags %></td>
        <td><%= link_to 'Show', picture %></td>
        <td><%= link_to 'Edit', edit_picture_path(picture) %></td>
        <td><%= link_to 'Destroy', picture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva ', new_picture_path %>