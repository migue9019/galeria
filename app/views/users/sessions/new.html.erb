<div id="formulario">
  <div  class="row ">

    <div class="col-md-2 col-md-offset-5 ">
      <br>
      <div class="panel panel-custom" >
        <div class="panel-body">

    
          <h2>Iniciar sesión</h2>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <%= f.email_field :email, placeholder:"Correo electrónico", autofocus: true %>
            </div>
            <br>
            <div class="field ">
              <%= f.password_field :password, placeholder:"Contraseña", autocomplete: "off" %>
            </div>
            <br>
            <% if devise_mapping.rememberable? -%>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :"Mantener la sesión iniciada" %>
              </div>
            <% end %>
              <div class="actions">
                <%= f.submit "Iniciar sesión", class: "btn btn-custom"%>
              </div>
            <% end %>
            <br>
            <%= render "users/shared/links" %>
          </div>
        </div>
      </div>
  </div>
</div>
